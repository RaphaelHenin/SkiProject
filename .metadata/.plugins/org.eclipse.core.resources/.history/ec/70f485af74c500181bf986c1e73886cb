import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.PrintStream;

public class writeInCSVFile {
	public void write(Node node) throws FileNotFoundException {
		File csvFile = new File("adjacentMatrix.csv");
		if (!csvFile.exists())
			throw new FileNotFoundException("Le fichier n'existe pas");
		else {
			PrintStream l_out = new PrintStream(new FileOutputStream("adjacentMatrix.csv", true));
			for(int i=0; i<37;i++) {
				for(Arc arc : node.getAdjacentNodes())
					if(arc.destination.getId()==i)
						l_out.print("1");
					else
						l_out.print("0");
			}
			l_out.flush();
			l_out.close();
			l_out = null;
		}
	}
}
